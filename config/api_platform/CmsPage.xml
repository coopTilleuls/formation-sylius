    <resource class="App\Entity\Cms\Page" shortName="CmsPage">
        <attribute name="order">
            <attribute name="id">DESC</attribute>
        </attribute>

        <collectionOperations>
            <collectionOperation name="admin_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/admin/cms/pages</attribute>
                <attribute name="normalization_context">
                    <attribute name="groups">admin:cms:read</attribute>
                </attribute>
            </collectionOperation>

            <collectionOperation name="shop_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/shop/cms/pages</attribute>
                <attribute name="normalization_context">
                    <attribute name="groups">shop:cms:read</attribute>
                </attribute>
            </collectionOperation>
        </collectionOperations>

        <itemOperations>
            <itemOperation name="admin_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/admin/cms/pages/{id}</attribute>
                <attribute name="normalization_context">
                    <attribute name="groups">admin:cms:read</attribute>
                </attribute>
            </itemOperation>
        </itemOperations>

